<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Pimienta y sal</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <!-- Menu Section -->
    <div class="ps-row ps-padding-64" id="menu">
      <div class="ps-col l6 ps-padding-large">
        <h1 class="ps-center">Nuentro Menu</h1>
        <br />
        <% menu.forEach(m => { %>
        <a href="/menu/detail/<%= m.id %>">
          <h4><%= m.nombre %></h4>
        </a>
        <br />

        <% }) %>
      </div>

      <div class="ps-col l6 ps-padding-large ps-img-menu">
        <img
          src="/images/menu.jpg"
          class="ps-round ps-image ps-opacity-min"
          alt="Menu"
        />
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
